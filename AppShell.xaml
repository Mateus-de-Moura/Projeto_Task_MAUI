<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TAsk.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"            
    xmlns:local="clr-namespace:TAsk"    
    Shell.FlyoutBehavior="Disabled">


    <TabBar x:Name="TabsPaginas">
          
        <Tab Title="Tasks" >
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
        <Tab  Title="Tasks"  Icon="botaoadicionar.png" NavigationPage.HasNavigationBar="False">
            
            <ShellContent ContentTemplate="{DataTemplate local:NewTask}" Shell.NavBarHasShadow="False"/>
        </Tab>


        <Tab Title="Anotações">
            <ShellContent ContentTemplate="{DataTemplate local:Page2}"/>
        </Tab>
        </TabBar>


</Shell>
